{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "noImplicitReturns":false,
        "noImplicitThis":false,
        "noImplicitUseStrict":false,
        "noUnusedLocals":false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "app/*": [ "../../../public/app/*" ],
            "vendor/*": [ "../../../public/vendor/*" ]
        }
    },
    "files": [
        "./src/**.ts"
    ],
    "include": [
        "../../../public/app/**/*.ts"
    ],
    "exclude": [
        "../../../public/vendor/**/*",
        "../../../public/**/*.d.ts"
    ]
}